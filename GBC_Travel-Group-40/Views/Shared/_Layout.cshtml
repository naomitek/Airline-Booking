<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBC_Travel_Group_40</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Ensure this file actually exists or correct the path accordingly -->
    <link rel="stylesheet" href="~/GBC_Travel_Group_40.styles.css" asp-append-version="true" />
</head>
<body>
    @Html.Partial("_Header")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- This should only be called once -->
        </main>
    </div>

    @Html.Partial("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var cartLink = document.getElementById("cartLink");
            if (cartLink) {
                cartLink.addEventListener("click", function (event) {
                    event.preventDefault();
                    window.location.href = "/Cart/Index";
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
