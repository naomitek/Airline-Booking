@model GBC_Travel_Group_40.Areas.ProductManagement.Models.BookingFlights

@{
    var passengers = ViewBag.passenger;
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookingFlights</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingFlightId" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <input asp-for="FlightId" class="form-control" />
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="PassengerId" />
                <h2>Passenger</h2>
                Full Name: @passengers.FirstName @passengers.LastName</br>
                Phone: @passengers.Phone
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

