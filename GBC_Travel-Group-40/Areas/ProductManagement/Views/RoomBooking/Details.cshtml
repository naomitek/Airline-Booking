@model GBC_Travel_Group_40.Areas.ProductManagement.Models.RoomBookings

@{
    ViewData["Title"] = "Details";
    var room = ViewBag.room;
}

<h1>Details</h1>
<div>
    <h4>RoomBookings</h4>
    <hr />
    <dl class="row">
        <img src="~/images/hotels/@room.Url" width="400" height="280" />
        <dt class="col-sm-2">
            Hotel Name:
        </dt>
        <dd class = "col-sm-10">
            @room.HotelName
        </dd>
        <dt class="col-sm-2">
            Location:
        </dt>
        <dd class="col-sm-10">
            @room.Location
        </dd>
        <dt class="col-sm-2">
            Amenities:
        </dt>
        @{
            if (room.PetFriendly)
            {
                <dd class="col-sm-10">Pet Friendly</dd>
            }
            if (room.AirConditioning)
            {
                <dd class="col-sm-10">Air Conditioning</dd>
            }
            if (room.Wifi)
            {
                <dd class="col-sm-10">Wifi</dd>
            }
        }
        <h2>Holder</h2>
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameOfHolder)
        </dd>
        <dt class = "col-sm-2">
            Phone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneOfHolder)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RoomBookingId">Edit</a> |
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="Cart">Back to List</a>
    }
</div>
